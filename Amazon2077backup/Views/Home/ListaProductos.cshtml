@{
    ViewBag.Title = "ListaProductos";
}

<h2>Productos</h2>

<a href="/Home/Agregar" class="btn btn-primary">Agregar</a>

<hr />

<div class="container">

    <div class="row">

        @foreach (var p in Model)

        {
            <div class="col-lg-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top img-responsive" src="@p.Imagen">
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">@p.Nombre</li>
                            <li class="list-group-item">@p.Descripcion</li>
                            <li class="list-group-item">USD$@p.Precio</li>
                            <li class="list-group-item">@p.Tipo</li>                           

                        </ul>
                        
                        <a href="#" class="btn btn-primary">Comprar</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
