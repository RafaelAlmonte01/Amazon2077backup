@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject Amazon2077backup.Data.ApplicationDbContext _db



<ul class="navbar-nav">
    <li class="nav-item">
        <a href="/Carrito/CarritoProductos" class="btn btn-btn btn-dark"><i class="fas fa-shopping-cart" style="color:white"></i></a><span class="badge badge-primary" id="cantEnCarrito" style="background-color:orange">@_db.Carrito.Where(a => a.UserName == User.Identity.Name).Count()</span>
    </li>
</ul>




<ul class="navbar-nav">


    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bienvenido denuevo, @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
            </form>
        </li>



    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>

    }
</ul>



